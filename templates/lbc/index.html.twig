{{ include('partials/main.html.twig') }}

<head>

	{{ include('partials/title-meta.html.twig', {title: 'Products'}) }}

	<!-- ION Slider -->
	<link href="/libs/ion-rangeslider/css/ion.rangeSlider.min.css" rel="stylesheet" type="text/css"/>

	{{ include('partials/head-css.html.twig') }}

</head>
<style>
	.categorie {
		margin-left: 35%;
		color: black;
	}
	.title {
		margin-left: 1%;
		color: black;
	}
	.card {
		border-radius: 10px;
		border: 1px solid #ccc;
		padding: 20px;
		box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
		height: 90%;
	}
	.cards {
		border-radius: 10px;
		border: 1px solid #ccc;
		padding: 20px;
		box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
		height: 25%;
	}
</style>

{{ include('partials/body.html.twig') }}

<!-- Begin page -->
<div id="layout-wrapper">

	{{ include('partials/menu.html.twig') }}

	<!-- ============================================================== -->
	<!-- Start right Content here -->
	<!-- ============================================================== -->
		<div class="main-content"> <div class="page-content">
			<div class="container-fluid">

				{{ include('partials/page-title.html.twig', {pagetitle: 'Lbc', title: 'Hub'}) }}

				<div class="row">
					<div class="col-lg-12">
						<div class="row">
							<a href="{{path("app_lbc_create")}}" class="btn btn-primary mb-4" id="first">Créer une annonce</a>

							{% for product in products %}
								<div class="col-xl-3 col-sm-6">
									<a href="{{path("app_lbc_detail", {'id': product.id})}}" title="Voir les détails">
										<div class="card">
											<div class="card-body">
												{% if product.category %}
													<p class="categorie">{{product.category}}</p>
												{% endif %}
												<div class="product-img position-relative">
													{% for pictures in product.lbcPictures.values %}
														{% if loop.first %}
															<img src="{{pictures.name}}" alt="" class="img-fluid mx-auto d-block">

														{% endif %}

													{% endfor %}
												</div>
												<div class="mt-4 text-center">
													<h5 class="mb-3 text-truncate">
                                                        {{product.title}}
													</h5>
													<h5 class="my-0">
														<span class="text-muted me-2"></span>
														{{product.price}}€</h5>


													{% if app.user == product.createdBy %}
														<a href="{{ path('app_lbc_edit', {'id': product.id}) }}">Modifier le produit</a>
														/<a href="{{ path('app_lbc_delete', {'id': product.id}) }}">Supprimer le produit</a>
													{% endif %}

												</div>
											</div>
										</div>
									</a>
								</div>
							{% endfor %}
							<!-- //product.category -->
						</div>
					</div>
					<!-- end row -->

				</div>
				<!-- container-fluid -->
			</div>
			<!-- End Page-content -->


			{{ include('partials/footer.html.twig') }}
		</div>
		<!-- end main content-->

	</div>
	<!-- END layout-wrapper -->

	{{ include('partials/right-sidebar.html.twig') }}

	{{ include('partials/vendor-scripts.html.twig') }}

	<!-- Ion Range Slider-->
	<script src="/libs/ion-rangeslider/js/ion.rangeSlider.min.js"></script>

	<!-- init js -->
	<script src="/js/pages/product-filter-range.init.js"></script>

	<!-- App js -->
	<script src="/js/app.js"></script>

</body></html>
