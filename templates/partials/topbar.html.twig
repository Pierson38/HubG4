<header id="page-topbar">
    <div class="navbar-header">
        <div class="d-flex">
            <!-- LOGO -->
            <div class="navbar-brand-box" style="padding: 0!important;">
                <a href="{{ path('home') }}" class="logo logo-dark">
                    <span class="logo-sm">
                        <img src="/images/logo.svg" alt="" height="40">
                    </span>
                    <span class="logo-lg">
                        <img src="/images/logo-dark.png" alt="" height="51" style="width: 100%; object-fit: cover;">
                    </span>
                </a>

                <a href="{{ path('home') }}" class="logo logo-light">
                    <span class="logo-sm">
                        <img src="/images/logo-light.svg" alt="" height="40">
                    </span>
                    <span class="logo-lg">
                        <img src="/images/logo-light.png" alt="" height="77.73" style="width: 100%; object-fit: cover;">
                    </span>
                </a>
            </div>

            <button type="button" style="background-color: transparent; color: #555b6d; padding: 0.47rem 0.75rem; border-radius: 0.25rem;" class="btn btn-sm px-3 font-size-16 header-item waves-effect" id="vertical-menu-btn">
                <i class="fa fa-fw fa-bars"></i>
            </button>

        </div>

        <div class="d-flex">

            <div class="dropdown d-none d-lg-inline-block ms-1">
                <button type="button" style="background-color: transparent; color: #555b6d; padding: 0.47rem 0.75rem; border-radius: 0.25rem;" class="btn header-item noti-icon waves-effect" data-bs-toggle="fullscreen">
                    <i class="bx bx-fullscreen"></i>
                </button>
            </div>


            <div class="dropdown d-inline-block">
                <button type="button" style="background-color: transparent; color: #555b6d; padding: 0.47rem 0.75rem; border-radius: 0.25rem;" class="btn header-item waves-effect" id="page-header-user-dropdown"
                data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <img class="rounded-circle header-profile-user" src="{{ app.user.picture }}"
                        alt="Header Avatar">
                    <span class="d-none d-xl-inline-block ms-1" key="t-henry">{{ app.user.firstname }}</span>
                    <i class="mdi mdi-chevron-down d-none d-xl-inline-block"></i>
                </button>
                <div class="dropdown-menu dropdown-menu-end">
                    <!-- item-->
                    <a class="dropdown-item" href="{{path("app_profile")}}"><i class="bx bx-user font-size-16 align-middle me-1"></i> <span key="t-profile">{% trans %}Voir mon profil{% endtrans %}</span></a>
                    <div class="dropdown-divider"></div>
                    <a class="dropdown-item text-danger" href="{{path("app_logout")}}"><i class="bx bx-power-off font-size-16 align-middle me-1 text-danger"></i> <span key="t-logout">{% trans %}DÃ©connexion{% endtrans %}</span></a>
                </div>
            </div>

        </div>
    </div>
</header>