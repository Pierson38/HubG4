{{ include('partials/main.html.twig') }}

<head>

	{{ include('partials/title-meta.html.twig', {title: 'Réinitialisez votre mot de passe'}) }}

	{{ include('partials/head-css.html.twig') }}

</head>

{% block body %}
	<div class="account-pages my-5 pt-sm-5">
		<div class="container">
			<div class="row justify-content-center">
				<div class="col-md-8 col-lg-6 col-xl-5">
					<div class="card overflow-hidden">
						<div class="bg-primary bg-soft">
							<div class="row">
								<div class="col-7">
									<div class="text-primary p-4">
										<h5 class="text-primary">Réinitialisez votre mot de passe</h5>
									</div>
								</div>
								<div class="col-5 align-self-end">
									<img src="/images/profile-img.png" alt="" class="img-fluid">
								</div>
							</div>
						</div>
						<div class="card-body pt-0">
							<div class="auth-logo">
								<a href="{{ path('home') }}" class="auth-logo-light">
									<div class="avatar-md profile-user-wid mb-4">
										<span class="avatar-title rounded-circle bg-light">
											<img src="/images/logo-light.svg" alt="" class="rounded-circle" height="34">
										</span>
									</div>
								</a>

								<a href="{{ path('home') }}" class="auth-logo-dark">
									<div class="avatar-md profile-user-wid mb-4">
										<span class="avatar-title rounded-circle bg-light">
											<img src="/images/logo.svg" alt="" class="rounded-circle" height="34">
										</span>
									</div>
								</a>
							</div>
							<div class="p-2">

								{{ form_start(resetForm) }}
								{{ form_row(resetForm.plainPassword) }}
								<button class="btn btn-primary">Réinitialiser</button>
								{{ form_end(resetForm) }}

							</div>

						</div>
					</div>
					<div class="mt-5 text-center"></div>
				</div>
			</div>
		</div>
		<!-- end account-pages -->

		{{ include('partials/vendor-scripts.html.twig') }}

		<!-- App js -->
		<script src="/js/app.js"></script>
	{% endblock %}

</html>
