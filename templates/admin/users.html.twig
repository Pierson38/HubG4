{{ include('partials/main.html.twig') }}

    <head>
        
        {{ include('partials/title-meta.html.twig', {title: 'Admin - Cr√©er un utilisateur'}) }}

        {{ include('partials/head-css.html.twig') }}

    </head>

    {{ include('partials/body.html.twig') }}

        <!-- Begin page -->
        <div id="layout-wrapper">

            {{ include('partials/menu.html.twig') }}

            <!-- ============================================================== -->
            <!-- Start right Content here -->
            <!-- ============================================================== -->
            <div class="main-content">

                <div class="page-content">
                    <div class="container-fluid">

						{{ include('partials/page-title.html.twig', {pagetitle: 'Admin', title: 'Utilisateurs'}) }}

                        <div class="row">
                            <div class="col-lg-12">
                                <div class="card">
                                    <div class="card-body">
                                        <a href="{{path("app_admin_users_create")}}" class="btn btn-primary mb-4" style="width: 100%;">Ajouter un utilisateur</a>
                                        <div class="table-responsive">
                                            <table class="table align-middle table-nowrap table-hover">
                                                <thead class="table-light">
                                                    <tr>
                                                        <th scope="col" style="width: 70px;"></th>
                                                        <th scope="col">Nom</th>
                                                        <th scope="col">Email</th>
                                                        <th scope="col">Role</th>
                                                        <th scope="col">Promo</th>
                                                        <th scope="col">Campus</th>
                                                        <th scope="col">Action</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    {% for user in users %}
                                                    <tr>
                                                        <td>
                                                            <div class="avatar-xs">
                                                                <img class="rounded-circle avatar-xs" src="{{user.picture}}" alt="">
                                                            </div>
                                                        </td>
                                                        <td>
                                                            <h5 class="font-size-14 mb-1"><a href="javascript: void(0);" class="text-dark">{{user.firstname ~ " " ~ user.lastname}}</a></h5>
                                                        </td>
                                                        <td>{{user.email}}</td>
                                                        <td>
                                                            <div>
                                                                {% for role in user.roles %}
                                                                <a href="javascript: void(0);" class="badge badge-soft-primary font-size-11 m-1">{{role}}</a>
                                                                {% endfor %}
                                                            </div>
                                                        </td>
                                                        <td>
                                                            {{user.promo.name}}
                                                        </td>
                                                        <td>
                                                            {{user.campus.name}}
                                                        </td>
                                                        <td>
                                                            <ul class="list-inline font-size-20 contact-links mb-0">
                                                                <li class="list-inline-item px-2">
                                                                    <a href="{{path("app_messengers_create_converstation_user", {id: user.id})}}" title="Message"><i class="bx bx-message-square-dots"></i></a>
                                                                </li>
                                                                <li class="list-inline-item px-2">
                                                                    <a href="{{path("app_admin_users_edit", {id: user.id})}}" title="Edit"><i class="bx bx-pencil"></i></a>
                                                                </li>
                                                                <li class="list-inline-item px-2">
                                                                    <a href="{{path("app_admin_users_delete", {id: user.id})}}" title="Delete"><i class="bx bx-trash"></i></a>
                                                                </li>
                                                            </ul>
                                                        </td>
                                                    </tr>
                                                    {% endfor %}
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div> <!-- container-fluid -->
                </div>
                <!-- End Page-content -->

                
                {{ include('partials/footer.html.twig') }}
            </div>
            <!-- end main content-->

        </div>
        <!-- END layout-wrapper -->

        {{ include('partials/right-sidebar.html.twig') }}

        {{ include('partials/vendor-scripts.html.twig') }}
        
        <!-- App js -->
        <script src="/js/app.js"></script>

    </body>
</html>
