{{ include('partials/main.html.twig') }}

    <head>
        
        {{ include('partials/title-meta.html.twig', {title: 'Admin - Conversations'}) }}

        {{ include('partials/head-css.html.twig') }}

        <link
        href="/libs/datatables.net-bs4/css/dataTables.bootstrap4.min.css" rel="stylesheet" type="text/css"/>
    
        <!-- Responsive datatable examples -->
        <link href="/libs/datatables.net-responsive-bs4/css/responsive.bootstrap4.min.css" rel="stylesheet" type="text/css"/>

    </head>

    {{ include('partials/body.html.twig') }}

        <!-- Begin page -->
        <div id="layout-wrapper">

            {{ include('partials/menu.html.twig') }}

            <!-- ============================================================== -->
            <!-- Start right Content here -->
            <!-- ============================================================== -->
            <div class="main-content">

                <div class="page-content">
                    <div class="container-fluid">

						{{ include('partials/page-title.html.twig', {pagetitle: 'Admin', title: 'Conversations'}) }}

                        <div class="row">
                            <div class="col-lg-12">
                                <div class="card">
                                    <div class="card-body">
                                        <div class="table-responsive">
                                            <table class="table table-hover dt-responsive datatable nowrap w-100">
                                                <thead>
                                                    <tr>
                                                        <th scope="col">Utilisateur 1</th>
                                                        <th scope="col">Utilisateur 2</th>
                                                        <th scope="col">Cr√©er le</th>
                                                        <th scope="col">Nombre de messages</th>
                                                        <th scope="col">Action</th>
                                                    </tr>
                                                </thead>
        
                                                <tbody>
                                                    {% for conversation in conversations %}
                                                        <tr>
                                                            <td>
                                                                {{conversation.fromUser}}
                                                            </td>
                                                            <td>
                                                                {{conversation.toUser}}
                                                            </td>
                                                            <td>{{conversation.createdAt|format_datetime('short', 'short', locale="fr")}}</td></td>
                                                            <td>{{conversation.messages|length}}</td>
                                                            <td>
                                                                <div class="dropdown">
                                                                    <a href="#" class="dropdown-toggle card-drop" data-bs-toggle="dropdown" aria-expanded="false">
                                                                        <i class="mdi mdi-dots-horizontal font-size-18"></i>
                                                                    </a>
                                                                    <div class="dropdown-menu dropdown-menu-end">
                                                                        <a class="dropdown-item" href="{{path('app_admin_conversations_messages', {id: conversation.id})}}">Voir les messages</a>
                                                                        <a class="dropdown-item" href="{{path('app_admin_conversations_delete', {id: conversation.id})}}">Supprimer</a>
                                                                    </div>
                                                                </div>
                                                            </td>
                                                        </tr>
                                                    {% endfor %}
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div> <!-- container-fluid -->
                </div>
                <!-- End Page-content -->

                
                {{ include('partials/footer.html.twig') }}
            </div>
            <!-- end main content-->

        </div>
        <!-- END layout-wrapper -->

        {{ include('partials/right-sidebar.html.twig') }}

        {{ include('partials/vendor-scripts.html.twig') }}
        
        <!-- App js -->
        <script src="/libs/datatables.net/js/jquery.dataTables.min.js"></script>
<script src="/libs/datatables.net-bs4/js/dataTables.bootstrap4.min.js"></script>
<!-- Buttons examples -->
<script src="/libs/datatables.net-buttons/js/dataTables.buttons.min.js"></script>
<script src="/libs/datatables.net-buttons-bs4/js/buttons.bootstrap4.min.js"></script>
<script src="/libs/datatables.net-buttons/js/buttons.html5.min.js"></script>
<script src="/libs/datatables.net-buttons/js/buttons.print.min.js"></script>
<!-- bootstrap-datepicker js -->
<script src="/libs/bootstrap-datepicker/js/bootstrap-datepicker.min.js"></script>
<!-- Responsive examples -->
<script src="/libs/datatables.net-responsive/js/dataTables.responsive.min.js"></script>
<script src="/libs/datatables.net-responsive-bs4/js/responsive.bootstrap4.min.js"></script>
        <script src="/js/app.js"></script>
        <script>$(document).ready(function () {

var allTables = document.querySelectorAll('.datatable');

    allTables.forEach(function (value) {
        var table = $(value).DataTable({
            lengthChange: false,
            searching: false,
            language: {
                url: "/js/pages/dataFrench.json"
            },
            buttons: []
        });

        table.buttons().container().appendTo('#datatable-buttons_wrapper .col-md-6:eq(0)');

        $(".dataTables_length select").addClass('form-select form-select-sm');
    });
});</script>


    </body>
</html>
