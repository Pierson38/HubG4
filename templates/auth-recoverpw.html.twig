{{ include('partials/main.html.twig') }}

<head>

	{{ include('partials/title-meta.html.twig', {title: 'Réinitialiser votre mot de passe'}) }}

	{{ include('partials/head-css.html.twig') }}
</head>

<body>
	<div class="account-pages my-5 pt-sm-5">
		<div class="container">
			<div class="row justify-content-center">
				<div class="col-md-8 col-lg-6 col-xl-5">
					<div class="card overflow-hidden">
						<div class="bg-primary bg-soft">
							<div class="row">
								<div class="col-7">
									<div class="text-primary p-4">

										{% for flash_error in app.flashes('reset_password_error') %}
											<div class="alert alert-danger" role="alert">{{ flash_error }}</div>
										{% endfor %}

										<h5 class="text-primary">
											Réinitialisez votre mot de passe</h5>
									</div>
								</div>
								<div class="col-5 align-self-end">
									<img src="/images/profile-img.png" alt="" class="img-fluid">
								</div>
							</div>
						</div>
						<div class="card-body pt-0">
							<div>
								<a href="{{ path('home') }}">
									<div class="avatar-md profile-user-wid mb-4">
										<span class="avatar-title rounded-circle bg-light">
											<img src="/images/logo.svg" alt="" class="rounded-circle" height="34">
										</span>
									</div>
								</a>
							</div>

							<div class="p-2">
								<div class="alert alert-success text-center mb-4" role="alert">
									Entrez votre email et nous vous enverrons un lien pour réinitialiser votre mot de passe.
								</div>

									{{ form_start(requestForm) }}
                                    
									{{ form_row(requestForm.email) }}

									<div class="text-end">
										<button class="btn btn-primary w-md waves-effect waves-light" type="submit">Réinitialiser</button>
									</div>

									{{ form_end(requestForm) }}
							</div>

						</div>
					</div>
					<div class="mt-5 text-center">
						<p>Vous souhaitez vous connecté ?
							<a href="login" class="fw-medium text-primary">
								C'est par ici !</a>
						</p>
					</div>

				</div>
			</div>
		</div>
	</div>

	{{ include('partials/vendor-scripts.html.twig') }}

	<!-- App js -->
	<script src="/js/app.js"></script>
</body></html>
